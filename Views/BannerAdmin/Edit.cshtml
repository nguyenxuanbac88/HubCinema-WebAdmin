@model HubCinemaAdmin.Models.Banner

@{
    ViewData["Title"] = "Chỉnh sửa Banner";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Chỉnh sửa Banner</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="BannerId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Ảnh hiện tại</label><br />
            <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height: 100px;" />
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label fw-bold">Thay ảnh mới (nếu có)</label>
            <input asp-for="ImageFile" type="file" class="form-control" onchange="previewImage(this)" />
            <div class="mt-2">
                <img id="previewImg" class="img-thumbnail" style="max-height: 100px; display:none;" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="LinkUrl" class="form-label fw-bold">Link chuyển hướng</label>
            <input asp-for="LinkUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label fw-bold">Thứ tự hiển thị</label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Hiển thị</label>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            var file = input.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var img = document.getElementById("previewImg");
                    img.src = e.target.result;
                    img.style.display = "block";
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}
