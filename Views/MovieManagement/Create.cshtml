@model HubCinemaAdmin.Models.MovieDTO

@{
    ViewData["Title"] = "Tạo phim mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4 text-primary">Tạo phim mới</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="MovieName" class="form-label"></label>
                <input asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Genre" class="form-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Duration" class="form-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Director" class="form-label"></label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ReleaseDate" class="form-label"></label>
                <input asp-for="ReleaseDate" class="form-control" type="date" />
                <span asp-validation-for="ReleaseDate" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CoverURL" class="form-label"></label>
                <input asp-for="CoverURL" class="form-control" />
                <span asp-validation-for="CoverURL" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TrailerURL" class="form-label"></label>
                <input asp-for="TrailerURL" class="form-control" />
                <span asp-validation-for="TrailerURL" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AgeRestriction" class="form-label"></label>
                <input asp-for="AgeRestriction" class="form-control" />
                <span asp-validation-for="AgeRestriction" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Producer" class="form-label"></label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Actors" class="form-label"></label>
                <input asp-for="Actors" class="form-control" />
                <span asp-validation-for="Actors" class="text-danger small"></span>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Lưu phim</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
