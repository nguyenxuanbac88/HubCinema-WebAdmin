@model HubCinemaAdmin.Models.AdminDashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Tổng quan hệ thống</li>
            </ol>

            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-primary text-white mb-4">
                        <div class="card-body">Vé bán hôm nay: <strong>@Model.TicketsToday</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Hôm nay</span>
                            <i class="fas fa-ticket-alt text-white"></i>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-warning text-white mb-4">
                        <div class="card-body">Vé tháng này: <strong>@Model.TicketsThisMonth</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Trong tháng</span>
                            <i class="fas fa-calendar-alt text-white"></i>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-success text-white mb-4">
                        <div class="card-body">Phim đang chiếu: <strong>@Model.CurrentMovies</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Hiện tại</span>
                            <i class="fas fa-film text-white"></i>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-danger text-white mb-4">
                        <div class="card-body">Tổng người dùng: <strong>@Model.TotalUsers</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Người dùng</span>
                            <i class="fas fa-users text-white"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-white mb-4">
                        <div class="card-body">Vé năm nay: <strong>@Model.TicketsThisYear</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Năm hiện tại</span>
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-secondary text-white mb-4">
                        <div class="card-body">Phim sắp chiếu: <strong>@Model.UpcomingMovies</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Sắp chiếu</span>
                            <i class="fas fa-hourglass-half text-white"></i>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="card bg-dark text-white mb-4">
                        <div class="card-body">Rạp hoạt động: <strong>@Model.ActiveCinemas</strong></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <span class="small text-white">Toàn hệ thống</span>
                            <i class="fas fa-building text-white"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bạn có thể giữ nguyên phần chart ở dưới nếu cần -->
            <div class="row">
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-area me-1"></i>
                            Area Chart (demo)
                        </div>
                        <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-1"></i>
                            Bar Chart (demo)
                        </div>
                        <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
