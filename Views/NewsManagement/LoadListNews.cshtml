@model List<HubCinemaAdmin.Models.News>

@{
    ViewData["Title"] = "Danh sách bài viết";
}

<h2 class="mb-4">Danh sách bài viết</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Tạo bài viết mới
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th>Phụ đề</th>
            <th>Slug</th>
            <th>Trạng thái</th>
            <th style="width: 120px">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.Slug</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Không có bài viết nào.</td>
            </tr>
        }
    </tbody>
</table>
