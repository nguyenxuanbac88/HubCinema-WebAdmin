@model List<HubCinemaAdmin.Models.InvoiceDto>
@{
    ViewData["Title"] = "Hóa đơn người dùng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">🧾 Hóa đơn của người dùng #@ViewBag.UserId</h2>
        <a href="@Url.Action("Index", "UserAdmin")" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-info text-center">
                <tr>
                    <th>Mã đơn</th>
                    <th>Phim</th>
                    <th>Rạp</th>
                    <th>Phòng</th>
                    <th>Suất</th>
                    <th>Ghế</th>
                    <th>Giá vé</th>
                    <th>Combo</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">Không có hóa đơn nào.</td>
                    </tr>
                }
                else
                {
                    @foreach (var invoice in Model)
                    {
                        <tr>
                            <td class="text-center fw-semibold">@invoice.OrderId</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@invoice.PosterUrl" width="40" height="60" style="object-fit: cover;" />
                                    <span>@invoice.MovieTitle</span>
                                </div>
                            </td>
                            <td>@invoice.CinemaName</td>
                            <td class="text-center">@invoice.RoomName</td>
                            <td class="text-nowrap text-center">@invoice.ShowTime.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">@invoice.Seats</td>
                            <td class="text-end text-nowrap">@invoice.Price.ToString("N0") ₫</td>
                            <td>
                                @if (invoice.ComboTotal > 0)
                                {
                                    <div class="fw-bold text-primary">@invoice.ComboTotal.ToString("N0") ₫</div>
                                    <ul class="mb-0">
                                        @foreach (var food in invoice.Foods)
                                        {
                                            <li>@food.Quantity x @food.FoodName (<span class="text-muted">@food.Price.ToString("N0") ₫</span>)</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Không</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
