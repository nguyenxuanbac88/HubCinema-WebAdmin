@model IEnumerable<HubCinemaAdmin.Models.MovieDTO>

@{
    ViewData["Title"] = "LoadListMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy 1 item mẫu để lấy DisplayNameFor, tránh lỗi khi Model rỗng
    var firstItem = Model.FirstOrDefault() ?? new HubCinemaAdmin.Models.MovieDTO();
}


<div class="container">
    <h1 class="mb-4 title">Danh sách phim</h1>

    <table class="table table-bordered align-middle">
        <thead class="table-secondary">
            <tr>
                <th>@Html.DisplayNameFor(model => firstItem.MovieName)</th>
                <th>@Html.DisplayNameFor(model => firstItem.Genre)</th>
                <th>@Html.DisplayNameFor(model => firstItem.Duration)</th>
                <th>@Html.DisplayNameFor(model => firstItem.Director)</th>
                <th>@Html.DisplayNameFor(model => firstItem.ReleaseDate)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="color-main">@Html.DisplayFor(modelItem => item.MovieName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration) phút</td>
                    <td>@Html.DisplayFor(modelItem => item.Director)</td>
                    <td>@(item.ReleaseDate.ToString("dd/MM/yyyy") ?? "")</td>
                    <td>
                        <a asp-action="EditMovie" asp-route-id="@item.IDMovie" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.IDMovie" class="btn btn-sm btn-info me-1">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.IDMovie" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
