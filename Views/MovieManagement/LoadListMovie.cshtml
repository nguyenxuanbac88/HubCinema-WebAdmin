@model IEnumerable<HubCinemaAdmin.Models.MovieDTO>

@{
    ViewData["Title"] = "LoadListMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var firstItem = Model.FirstOrDefault() ?? new HubCinemaAdmin.Models.MovieDTO();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="fw-bold">Quản lý phim / Danh sách phim</h6>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="fas fa-plus"></i> Tạo phim
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => firstItem.MovieName)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.Genre)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.Duration)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.Director)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.AgeRestriction)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.ReleaseDate)</th>
                    <th>@Html.DisplayNameFor(model => firstItem.EndDate)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="EditMovie" asp-route-id="@item.IDMovie" class="text-main fw-semibold text-decoration-none">
                                @item.MovieName
                            </a>
                        </td>
                        <td>
                            @foreach (var genre in item.Genre.Split(','))
                            {
                                <span class="badge bg-light text-main border-main me-1">@genre.Trim()</span>
                            }
                        </td>
                        <td>@item.Duration phút</td>
                        <td><span class="badge bg-light text-primary border border-primary">@item.Director</span></td>
                        <td>
                            <span class="badge bg-light text-warning border border-warning">@item.AgeRestriction</span>
                        </td>
                        <td>
                            <span class="badge bg-light text-danger border border-danger">
                                @item.ReleaseDate.ToString("dd-MM-yyyy")
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-light text-secondary border border-secondary">
                                @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd-MM-yyyy") : "Chưa xác định")
                            </span>
                        </td>
                        <td>
                            <a asp-action="EditMovie" asp-route-id="@item.IDMovie" class="btn btn-sm btn-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center mt-3">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="LoadListMovie" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="LoadListMovie" asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="LoadListMovie" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">»</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
