@model HubCinemaAdmin.Models.ShowtimeDTO

@{
    ViewData["Title"] = "CreateSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cinemas = ViewBag.Cinemas as List<HubCinemaAdmin.Models.CinemaDTO>;
    var rooms = ViewBag.Rooms as List<HubCinemaAdmin.Models.RoomDTO>;
    var movies = ViewBag.Movies as List<HubCinemaAdmin.Models.MovieDTO>;
}

<h1>Tạo Suất Chiếu Mới</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateSchedule" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Rạp phim -->
            <div class="form-group">
                <label for="MaRap">Rạp phim</label>
                <select id="MaRap" name="MaRap" class="form-control">
                    @foreach (var cinema in cinemas)
                    {
                        <option value="@cinema.IDCinema">@cinema.CinemaName</option>
                    }
                </select>
            </div>

            <!-- Phòng chiếu -->
            <div class="form-group">
                <label for="PhongChieu">Phòng chiếu</label>
                <select id="PhongChieu" name="PhongChieu" class="form-control">
                    @foreach (var room in rooms)
                    {
                        <option value="@room.IDRoom">@room.RoomName</option>
                    }
                </select>
            </div>

            @* <!-- Phim --> *@
            @* <div class="form-group"> *@
            @*     <label for="MaPhim">Phim</label> *@
            @*     <select id="MaPhim" name="MaPhim" class="form-control"> *@
            @*         @foreach (var movie in movies) *@
            @*         { *@
            @*             <option value="@movie.IDMovie">@movie.MovieName</option> *@
            @*         } *@
            @*     </select> *@
            @* </div> *@

            <!-- Ngày chiếu -->
            <div class="form-group">
                <label asp-for="NgayChieu" class="control-label"></label>
                <input asp-for="NgayChieu" class="form-control" type="date" />
                <span asp-validation-for="NgayChieu" class="text-danger"></span>
            </div>

            <!-- Giờ bắt đầu -->
            <div class="form-group">
                <label asp-for="GioChieu" class="control-label"></label>
                <input asp-for="GioChieu" class="form-control" type="time" />
                <span asp-validation-for="GioChieu" class="text-danger"></span>
            </div>

            <!-- Giờ kết thúc -->
            <div class="form-group">
                <label asp-for="GioKetThuc" class="control-label"></label>
                <input asp-for="GioKetThuc" class="form-control" type="time" />
                <span asp-validation-for="GioKetThuc" class="text-danger"></span>
            </div>

            <!-- Chi phí -->
            <div class="form-group">
                <label asp-for="ChiPhi" class="control-label"></label>
                <input asp-for="ChiPhi" class="form-control" />
                <span asp-validation-for="ChiPhi" class="text-danger"></span>
            </div>

            <!-- Loại suất chiếu -->
            <div class="form-group">
                <label asp-for="TypeSuatChieu" class="control-label"></label>
                <input asp-for="TypeSuatChieu" class="form-control" />
                <span asp-validation-for="TypeSuatChieu" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tạo suất chiếu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#MaRap').change(function () {
                var cinemaId = $(this).val();
                $.ajax({
                    url: '/ShowtimeManagement/GetRoomsByCinemaId',
                    data: { cinemaId: cinemaId },
                    success: function (data) {
                        var roomSelect = $('#PhongChieu');
                        roomSelect.empty();
                        $.each(data, function (i, room) {
                            roomSelect.append($('<option>', {
                                value: room.idRoom,
                                text: room.name
                            }));
                        });
                    }
                });
            });
        });
    </script>
}
