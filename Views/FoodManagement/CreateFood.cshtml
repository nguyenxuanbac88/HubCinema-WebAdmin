@model HubCinemaAdmin.Models.FoodDTO

@{
    ViewData["Title"] = "Tạo món ăn";
}

<h2>@ViewData["Title"]</h2>

<!-- Thông báo -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}

<form asp-action="CreateFood" method="post" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FoodName" class="form-label"></label>
        <input asp-for="FoodName" class="form-control" />
        <span asp-validation-for="FoodName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageURL" class="form-label"></label>
        <input asp-for="ImageURL" class="form-control" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label class="form-label">Áp dụng cho rạp:</label><br />
        @{
            var cinemas = ViewBag.Cinemas as List<HubCinemaAdmin.Models.CinemaDTO>;
        }

        @if (cinemas != null && cinemas.Any())
        {
            for (int i = 0; i < cinemas.Count; i++)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="SelectedCinemaIds"
                           value="@cinemas[i].IDCinema"
                           id="cinema_@cinemas[i].IDCinema" />
                    <label class="form-check-label" for="cinema_@cinemas[i].IDCinema">
                        @cinemas[i].CinemaName (@cinemas[i].City)
                    </label>
                </div>
            }
        }
        else
        {
            <div class="text-danger">Không thể tải danh sách rạp.</div>
        }
    </div>



    <button type="submit" class="btn btn-primary">Tạo món ăn</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
