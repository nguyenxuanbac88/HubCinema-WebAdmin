@model HubCinemaAdmin.Models.RoomDTO

@{
    ViewData["Title"] = "Tạo phòng chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i> Tạo phòng chiếu</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="CreateRoom">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input asp-for="IDRoom" type="hidden" />
                <input asp-for="CinemaID" type="hidden" />
                <input asp-for="id_layout" type="hidden" />

                <div class="mb-3">
                    <label asp-for="RoomName" class="form-label fw-semibold"></label>
                    <input asp-for="RoomName" class="form-control" placeholder="Nhập tên phòng chiếu..." />
                    <span asp-validation-for="RoomName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomImageURL" class="form-label fw-semibold"></label>
                    <input asp-for="RoomImageURL" class="form-control" placeholder="URL hình ảnh phòng..." />
                    <span asp-validation-for="RoomImageURL" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomType" class="form-label fw-semibold"></label>
                    <input asp-for="RoomType" type="number" class="form-control" placeholder="Nhập loại phòng (số)..." />
                    <span asp-validation-for="RoomType" class="text-danger small"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" asp-for="Status" />
                    <label class="form-check-label fw-semibold" asp-for="Status">
                        @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Lưu phòng chiếu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
